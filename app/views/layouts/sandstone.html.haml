!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "workshops"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "sandstone", :media => "all"
    = yield(:page_stylesheet) if content_for?(:page_stylesheet)


  %body
    %nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          = link_to "#{AppConfig.workshops_name}", root_path, class: 'navbar-brand'
        %ul.nav.navbar-nav.navbar-right
          - if current_user.nil?
            %li
              = link_to 'Log in', new_user_session_path
            %li
              = link_to 'Sign up', new_user_registration_path
          - else
            %li
              = link_to "#{current_user.fullname}", user_path(current_user), id: 'user-name'
            - if current_user.admin?
              %li
                = link_to 'All users', users_path
            %li
              = link_to 'Log out', destroy_user_session_path, method: :delete
    .container-fluid
      .row
        .col-lg-12

          = render 'layouts/flash_messages'
          = yield

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "sandstone"
    = yield(:page_javascript) if content_for?(:page_javascript)
